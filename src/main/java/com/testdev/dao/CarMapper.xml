<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testdev.dao.CarMapper">

	<resultMap id="carResultMap" type="com.testdev.domain.Car">
		<id property="carId" column="car_id" />
		<result property="brandName" column="brand_name" />
		<result property="model" column="model" />
		<association property="employee" column="employee_id" javaType="com.testdev.domain.Employee" select="selectEmployee"/>
	</resultMap>
	
	<resultMap id="employeeResultMap" type="com.testdev.domain.Employee">
		<constructor>
			<idArg column="employee_id" javaType="long" />
			<arg column="first_name" javaType="String" />
		</constructor>
		<id property="employeeId" column="employee_id" />
		<result property="firstName" column="first_name" />
		<result property="lastName" column="last_name" />
		<result property="age" column="age" />
	</resultMap>

	<select id="selectCar" resultMap="carResultMap">
		select * from cars
		where car_id = #{carId}
	</select>

	<select id="selectCars" resultMap="carResultMap">
		select * from cars
	</select>
	
	<select id="selectEmployee" resultMap="employeeResultMap">
		select * from employees
		where employee_id = #{id}
	</select>
</mapper>